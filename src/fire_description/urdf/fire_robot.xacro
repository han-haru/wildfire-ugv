<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="fire_robot">

<!--##############################################################-->
<!--#################### XACRO 상수 ####################-->
  <xacro:arg name="include_inertial" default="true"/>
  <xacro:property name="mesh_dir"   value="$(find fire_description)/meshes"/>

<!--##############################################################-->
<!--#################### Robot Links & Joints ####################-->
<!--##############################################################-->

<!--##############################################################-->
<!-- Base footprint link -->
  <!-- xacro 루트 링크에 inertial 있으면 경고 띄움. dummy용-->
  <link name="base_footprint"/>
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </joint>

<!--##############################################################-->
  <!-- ========== base_link (루트) ========== -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="6.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/base_link.obj" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/base_link.obj" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

<!--##############################################################-->
  <!-- ===== IMU frame ===== -->
  <link name="imu_link"/>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <!-- 로봇 기준에서 IMU 위치/자세 조정 -->
    <origin xyz="-0.10 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- ===== Gazebo Sim sensors on imu_link ===== -->
  <gazebo reference="imu_link">
    <!-- 6축 IMU(가속도+자이로) -->
    <sensor name="imu_sensor" type="imu">
      <topic>/imu</topic>           <!-- GZ Transport topic -->
      <update_rate>100</update_rate>
      <imu>
        <angular_velocity>
          <x><noise type="gaussian"><mean>0</mean><stddev>0.002</stddev></noise></x>
          <y><noise type="gaussian"><mean>0</mean><stddev>0.002</stddev></noise></y>
          <z><noise type="gaussian"><mean>0</mean><stddev>0.002</stddev></noise></z>
        </angular_velocity>
        <linear_acceleration>
          <x><noise type="gaussian"><mean>0</mean><stddev>0.1</stddev></noise></x>
          <y><noise type="gaussian"><mean>0</mean><stddev>0.1</stddev></noise></y>
          <z><noise type="gaussian"><mean>0</mean><stddev>0.1</stddev></noise></z>
        </linear_acceleration>
      </imu>
    </sensor>

    <!-- 자력계(3축) -->
    <sensor name="mag_sensor" type="magnetometer">
      <topic>/mag</topic>           <!-- GZ Transport topic -->
      <update_rate>50</update_rate>
      <magnetometer>
        <x><noise type="gaussian"><mean>0</mean><stddev>0.0005</stddev></noise></x>
        <y><noise type="gaussian"><mean>0</mean><stddev>0.0005</stddev></noise></y>
        <z><noise type="gaussian"><mean>0</mean><stddev>0.0005</stddev></noise></z>
      </magnetometer>
    </sensor>
  </gazebo>

<!--##############################################################-->
<!--####################camera view############################-->
  <link name="cam_follow_link">
    <inertial>
      <mass value="0.0001"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material><color rgba="1 0 0 1"/></material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- joint: fixed → revolute(잠금) -->
  <joint name="cam_follow_joint" type="revolute">
    <parent link="base_link"/>
    <child link="cam_follow_link"/>
    <origin xyz="0.05 0 0.3" rpy="0 0 3.1415926535"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.0" effort="0.1" velocity="0.1"/>
    <dynamics damping="1.0"/>
  </joint>

<!--##############################################################-->
  <!-- ========== ARM ========== -->
  <joint name="arm_joint" type="revolute">
    <origin xyz="0.2765 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="arm"/>
    <axis xyz="0 1 0"/>
    <limit velocity="1.0" lower="-0.5" upper="0.5" effort="50" />
    <!-- dynamic damping -->
    <dynamics damping="0.05" friction="0.2"/>
  </joint>

  <link name="arm">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/arm.obj" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/arm.obj" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

<!--##############################################################-->
  <!-- ========== BLADE ========== -->
  <joint name="blade_joint" type="continuous">
    <origin xyz="0.240 0 0" rpy="0 0 0"/>
    <parent link="arm"/>
    <child link="blade"/>
    <axis xyz="0 1 0"/>
    <limit velocity="200.0" effort="5.0"/>
    <dynamics damping="0.01" friction="0.05"/>
  </joint>

  <link name="blade">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.7"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/blade.obj" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/blade.obj" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!--##############################################################-->
  <!-- ========== LEFT WHEELS (parent=base_link) ========== -->
  <!-- ==================== left_wheel1 =================== -->
  <joint name="left_wheel_1_joint" type="continuous">
    <origin xyz="-0.2935 -0.15743 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="left_wheel1"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="20.0" effort="50.0"/>
  </joint>
  <link name="left_wheel1">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel.obj" scale="0.01 0.01 0.01"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel.obj" scale="0.01 0.01 0.01"/></geometry>
    </collision>
  </link>
  <gazebo reference="left_wheel1">
    <mu1>1.0</mu1>   <!-- 표면 마찰 계수 -->
    <mu2>1.0</mu2>
    <kp>1e5</kp>     <!-- 접촉 강성 -->
    <kd>1.0</kd>     <!-- 접촉 감쇠 -->
  </gazebo>

<!--##############################################################-->
<!-- ==================== left_wheel2 =================== -->
  <joint name="left_wheel_2_joint" type="continuous">
    <origin xyz="0.025 -0.15743 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="left_wheel2"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="20.0" effort="50.0"/>
  </joint>
  <link name="left_wheel2">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel.obj" scale="0.01 0.01 0.01"/></geometry>
