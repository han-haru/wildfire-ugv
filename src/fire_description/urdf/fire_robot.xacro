<!--##############################################################-->
<!-- ========== right_wheel3 ========== -->
  <joint name="right_wheel_3_joint" type="continuous">
    <origin xyz="0.3455 0.15743 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="right_wheel3"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
