    <kd>1.0</kd>     <!-- 접촉 감쇠 -->
  </gazebo>

<!--##############################################################-->
  <!-- ========== RIGHT WHEELS ========== -->
  <!-- ========== right_wheel1 ========== -->
  <joint name="right_wheel_1_joint" type="continuous">
    <origin xyz="-0.2935 0.15743 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="right_wheel1"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
