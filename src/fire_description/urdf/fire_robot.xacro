<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="fire_robot">

  <!-- ====== XACRO ARGS ====== -->
  <xacro:arg name="include_inertial" default="true"/>
  <xacro:arg name="mesh_scale" default="0.001 0.001 0.001"/>
  <xacro:property name="mesh_dir"   value="$(find fire_description)/meshes"/>
  <xacro:property name="scale_3d"   value="$(arg mesh_scale)"/>

  <!-- xacro 루트 링크에 inertial 있으면 경고 띄움. dummy용-->
  <link name="base_footprint"/>
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ========== base_link (루트) ========== -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="6.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/base_link_Body1.obj" scale="${scale_3d}"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/base_link_Body1.stl" scale="${scale_3d}"/>
      </geometry>
    </collision>
  </link>

  <!-- ========== ARM ========== -->
  <joint name="arm_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="arm"/>
    <axis xyz="0 1 0"/>
    <limit velocity="1.0" lower="-0.5" upper="0.5" effort="50" />
    <!-- dynamic damping -->
    <dynamics damping="0.05" friction="0.2"/>
  </joint>

  <link name="arm">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/arm_Body1.obj" scale="${scale_3d}"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/arm_Body1.stl" scale="${scale_3d}"/>
      </geometry>
    </collision>
  </link>
  <!-- ========== BLADE ========== -->
  <joint name="blade_joint" type="continuous">
    <origin xyz="0. 0 0" rpy="0 0 0"/>
    <parent link="arm"/>
    <child link="blade"/>
    <axis xyz="0 1 0"/>
    <limit velocity="200.0" effort="5.0"/>
    <dynamics damping="0.01" friction="0.05"/>
  </joint>

  <link name="blade">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.7"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/blade_Body1.obj" scale="${scale_3d}"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://${mesh_dir}/blade_Body1.stl" scale="${scale_3d}"/>
      </geometry>
    </collision>
  </link>

  <!-- ========== LEFT WHEELS (parent=base_link) ========== -->
  <joint name="left_wheel_1_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="left_wheel1"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="0.26" effort="5.0"/>
  </joint>
  <link name="left_wheel1">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel1_Body1.obj" scale="${scale_3d}"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel1_Body1.stl" scale="${scale_3d}"/></geometry>
    </collision>
  </link>

  <joint name="left_wheel_2_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="left_wheel2"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="0.26" effort="5.0"/>
  </joint>
  <link name="left_wheel2">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel2_Body1.obj" scale="${scale_3d}"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel2_Body1.stl" scale="${scale_3d}"/></geometry>
    </collision>
  </link>

  <joint name="left_wheel_3_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="left_wheel3"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="0.26" effort="5.0"/>
  </joint>
  <link name="left_wheel3">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel3_Body1.obj" scale="${scale_3d}"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/left_wheel3_Body1.stl" scale="${scale_3d}"/></geometry>
    </collision>
  </link>

  <!-- ========== RIGHT WHEELS ========== -->
  <joint name="right_wheel_1_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="right_wheel1"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="0.26" effort="5.0"/>
  </joint>
  <link name="right_wheel1">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/right_wheel1_Body1.obj" scale="${scale_3d}"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/right_wheel1_Body1.stl" scale="${scale_3d}"/></geometry>
    </collision>
  </link>

  <joint name="right_wheel_2_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="right_wheel2"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="0.26" effort="5.0"/>
  </joint>
  <link name="right_wheel2">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/right_wheel2_Body1.obj" scale="${scale_3d}"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/right_wheel2_Body1.stl" scale="${scale_3d}"/></geometry>
    </collision>
  </link>

  <joint name="right_wheel_3_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/><child link="right_wheel3"/>
    <axis xyz="0 1 0"/><dynamics damping="0.05" friction="0.0"/>
    <limit velocity="0.26" effort="5.0"/>
  </joint>
  <link name="right_wheel3">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.5"/><inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/></inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/right_wheel3_Body1.obj" scale="${scale_3d}"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="file://${mesh_dir}/right_wheel3_Body1.stl" scale="${scale_3d}"/></geometry>
    </collision>
  </link>

  <!-- ===== ros2_control: Gazebo Sim 하드웨어 플러그인 ===== -->
  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <!-- Arm : position 명령-->
    <joint name="arm_joint">
      <command_interface name="position"/> 
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <!-- Blade : velocity 명령-->
    <joint name="blade_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <!-- Wheels : velocity 명령--> 
    <joint name="left_wheel_1_joint"><command_interface name="velocity"/>
      <state_interface name="position"/><state_interface name="velocity"/></joint>
    <joint name="left_wheel_2_joint"><command_interface name="velocity"/>
      <state_interface name="position"/><state_interface name="velocity"/></joint>
    <joint name="left_wheel_3_joint"><command_interface name="velocity"/>
      <state_interface name="position"/><state_interface name="velocity"/></joint>

    <joint name="right_wheel_1_joint"><command_interface name="velocity"/>
      <state_interface name="position"/><state_interface name="velocity"/></joint>
    <joint name="right_wheel_2_joint"><command_interface name="velocity"/>
      <state_interface name="position"/><state_interface name="velocity"/></joint>
    <joint name="right_wheel_3_joint"><command_interface name="velocity"/>
      <state_interface name="position"/><state_interface name="velocity"/></joint>
  </ros2_control>

  <!-- ===== Gazebo 플러그인: 컨트롤러 매니저 구동 ===== -->
  <gazebo>
    <plugin filename="libgz_ros2_control-system.so"
            name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find fire_bringup)/config/controller.yaml</parameters>
      <!-- 필요 시 네임스페이스/리매핑도 추가 가능
      <ros>
        <namespace>fire</namespace>
      </ros>
      -->
    </plugin>
  </gazebo>
</robot>